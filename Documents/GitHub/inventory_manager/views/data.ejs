<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="CSS\style.css">
        <script src="../server.js" async defer></script>
    </head>
    <body>
        <div id="background">
            <div id="outer-border">
                <div id="header">
                    <ul id="header-list">
                        <li id="database-list"><h1 id="database-header">Database</h1></li>
                        <li id="collection-list"><h1 id="collection-header">Collection</h1></li>
                    </ul>
                </div>
                <div id="doc-body"> 
                    <h1 id="body-liner">Documents</h1>
                    <hr id="line">
                    <div id="documents">
                        <table id="doc-table">
                            <thead>
                                <td class="table-headers">Asset Tag</td>
                                <td class="table-headers">Serial Number</td>
                                <td class="table-headers">Device Type</td>
                                <td class="table-headers">Assigned To</td>
                                <td class="table-headers">ID</td>
                            </thead>
                            <% items.forEach((item) => {  %>
                            <tr class="table-rows">
                                <td class="table-rows"><p class="inner-text"><%= item.assetTag%></p></td>
                                <td class="table-rows"><p class="inner-text"><%= item.serialNumber%></p></td>
                                <td class="table-rows"><p class="inner-text"><%= item.deviceType%></p></td>
                                <td class="table-rows"><p class="inner-text"><%= item.assignedTo%></p></td>
                                <td class="table-rows"><p class="inner-text"><%= item._id%></p></td>
                            </tr>
                            <% })%>
                            </tr>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>